<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_baseline_person_white">

        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ankush Kumar"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@android:color/white">

            </TextView>
            <ImageView
                android:id="@+id/profile_name_change"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_white_32">

            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="4"
        android:layout_marginBottom="10dp"
        android:padding="5dp">
        <ImageView

            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_email_24"></ImageView>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                ></TextView>
            <TextView
                android:id="@+id/profile_email"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="abc@gmail.com"
                ></TextView>

        </LinearLayout>
        <ImageView
            android:id="@+id/profile_email_change"
            android:layout_weight="1"

            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:foregroundGravity="right"
            android:src="@drawable/edit_24_gray"></ImageView>

    </LinearLayout>

    <View android:id="@+id/separator"
        android:background="@android:color/darker_gray"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="4"
        android:layout_marginBottom="10dp"
        android:padding="5dp">
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_phone_android_24"></ImageView>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                ></TextView>
            <TextView
                android:id="@+id/profile_mobile"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="*146481114"
                ></TextView>

        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/profile_mobile_change"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:foregroundGravity="right"
            android:src="@drawable/edit_24_gray"></ImageView>

    </LinearLayout>

    <View
        android:background="@android:color/darker_gray"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/profile_apply_changes"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:text="Apply Changes"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white"></Button>

    </LinearLayout>
</LinearLayout>