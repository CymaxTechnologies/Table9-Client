<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardshowres"
        android:layout_margin="0dp"
        app:cardCornerRadius="10dp"
        android:background="@drawable/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/resturant_dummy">

            </ImageView>

            <TextView
                android:id="@+id/resturant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:drawablePadding="5dp"
                android:text="Resturant Name"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resturant_category"


                    android:drawableLeft="@drawable/ic_baseline_restaurant_24"
                    android:layout_margin="5dp"
                    android:text="Category"></TextView>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <TextView
                          android:drawableLeft="@drawable/star_orang"
                          android:drawablePadding="5dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/ratingBar"
                          android:layout_margin="5dp"
                          android:text="Category"></TextView>

                  </LinearLayout>
               </RelativeLayout> </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <TextView
                   android:drawablePadding="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/time"


                   android:drawableLeft="@drawable/clock"
                   android:layout_margin="5dp"
                   android:text="Addreassnd location on click"></TextView>

               <TextView
                   android:drawablePadding="5dp"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/resturant_addres"


                   android:drawableLeft="@drawable/location_24_orange"
                   android:layout_margin="5dp"
                   android:text="Addreassnd location on click"></TextView>




           </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>