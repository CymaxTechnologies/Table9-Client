<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="0dp"
        android:padding="10dp"
        android:background="@drawable/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/resturant_dummy">

            </ImageView>

            <TextView
                android:id="@+id/resturant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/menu"
                android:drawablePadding="5dp"
                android:text="Resturant Name"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resturant_addres"


                android:drawableLeft="@drawable/location_24_orange"
                android:layout_margin="10dp"
                android:text="Addreassnd location on click"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resturant_contact"


                    android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                    android:layout_margin="10dp"
                    android:text="Phone/mobile"></TextView>

                <TextView
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resturant_category"

                    
                    android:drawableLeft="@drawable/ic_baseline_restaurant_24"
                    android:layout_margin="10dp"
                    android:text="Category"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/resturant_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:drawableRight="@drawable/ic_baseline_double_arrow_24"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Check In"
                    android:textColor="#FFFFFF">

                </Button>

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/resturant_locate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:drawableRight="@drawable/ic_baseline_not_listed_location_24"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Locate"
                    android:textColor="#FFFFFF">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>